%h1
  %center 学生アカウント作成

= form_for(@student, url: students_new_path) do |f|
  = render 'error_messages'
  %table(align="center")
    %tr
      %td= f.label :name, '氏名'
      %td= f.text_field :name

    %tr
      %td= f.label :education_number, '学籍番号'
      %td= f.text_field :education_number

    %tr
      %td= f.label :password, 'パスワード'
      %td= f.password_field :password

    %tr
      %td= f.label :password_confirmation, 'パスワード確認'
      %td= f.password_field :password_confirmation

  %center= f.submit '作成'

= link_to '<<教員トップページへ', teacher_path(current_teacher.id)
