%h1
  //%center 打刻管理ページ(個人)

%h2
  %center(class="student_index-student-name")= "#{@student.name}"

.student_index-list-space
  = render 'list_timecards', timecards: @timecards

%center= link_to '打刻作成', timecard_create_path(@student.id),class:"student_index-make-engraving"

= link_to '打刻管理ページ(一覧)へ', timecards_path,class:"student_index-back-to-top"

-# 報告書は12日以上連続出席した学生アカウントにのみ作成可能
- if @student.counts_attendance >= 12
  %center= link_to '報告書作成', timecard_report_path(@student.id)

= link_to '<<打刻管理ページ(一覧)へ', timecards_path
